---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro'; // AsegÃºrate de que esta ruta sea correcta

export async function getStaticPaths() {
  const labEntries = await getCollection('labs');
  return labEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<title>{entry.data.title} | Andres Suarez</title>
	</head>
	<body class="bg-slate-950 text-slate-300 font-mono p-8 md:p-20">
		<main class="max-w-4xl mx-auto">
			<a href="/" class="text-green-400 hover:underline mb-10 inline-block text-sm">
				&lt;-- VOLVER_AL_SISTEMA
			</a>

			<header class="mb-12 border-b border-slate-800 pb-8">
				<h1 class="text-4xl md:text-5xl font-bold text-slate-100 mb-4">
					{entry.data.title}
				</h1>
				<div class="flex flex-wrap gap-3">
					{entry.data.tags.map((tag) => (
						<span class="bg-green-900/30 text-green-400 px-3 py-1 rounded-full text-xs border border-green-800/50">
							{tag}
						</span>
					))}
				</div>
			</header>

			<article class="prose prose-invert prose-green max-w-none">
				<Content />
			</article>
		</main>
	</body>
</html>