		<script>
			const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^&*()_+-=[]{}|;':,./<>?";
			let interval = null;

			// Función para animar el texto
			const animateText = (target) => {
				let iteration = 0;
				const originalText = target.dataset.value;
				
				clearInterval(interval);
				
				interval = setInterval(() => {
					target.innerText = originalText
						.split("")
						.map((letter, index) => {
							if(index < iteration) {
								return originalText[index];
							}
							return letters[Math.floor(Math.random() * 26)];
						})
						.join("");
					
					if(iteration >= originalText.length){ 
						clearInterval(interval);
					}
					
					iteration += 1 / 3;
				}, 30);
			}

			// Ejecutar al cargar la página
			document.addEventListener("DOMContentLoaded", () => {
				const hackerName = document.querySelector("#hacker-name");
				if(hackerName) {
					// Pequeño delay inicial
					setTimeout(() => {
						animateText(hackerName);
					}, 500);

					// Reactivar animación al pasar el mouse
					hackerName.onmouseover = event => {  
						animateText(event.target);
					}
				}
			});
		</script>

		<style>
			/* Animación de escaneo de texto */
			@keyframes scanText {
				0% { transform: translateX(-100%); }
				50%, 100% { transform: translateX(100%); }
			}
			.animate-scan-text {
				animation: scanText 3s ease-in-out infinite;
			}
		</style>
	</body>
