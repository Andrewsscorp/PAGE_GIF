---
// --- ZONA DE DATOS (Edita aquí tus habilidades) ---
const skills = [
  {
    category: "Ciberseguridad", 
    items: ["Kali Linux", "Wireshark", "Metasploit", "Nmap", "Burp Suite"]
  },
  {
    category: "Desarrollo & Backend",
    items: ["Python", "SQL", "Bash Scripting", "Git/GitHub", "React"]
  },
  {
    category: "Auditoría & Finanzas",
    items: ["Auditoría TI", "ISO 27001", "Riesgos Tecnológicos", "Excel Avanzado"]
  }
];
---

<section id="habilidades" class="py-20 px-4 max-w-6xl mx-auto">
    
    <h2 class="text-3xl font-bold text-slate-100 mb-12 flex items-center">
        <span class="text-green-400 mr-2">02.</span> Habilidades
        <span class="h-px bg-slate-800 flex-grow ml-4"></span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {skills.map((group) => (
            <div class="bg-slate-900/50 p-6 rounded-lg border border-slate-800 hover:border-green-500/30 transition-all">
                <h3 class="text-xl font-bold text-green-400 mb-4 font-mono">
                    &gt; {group.category}
                </h3>
                <ul class="space-y-2">
                    {group.items.map((item) => (
                        <li class="flex items-center text-slate-400 text-sm font-mono">
                            <span class="text-green-500 mr-2">#</span> {item}
                        </li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</section>